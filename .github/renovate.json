{
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "dockerfile"
            ],
            "matchUpdateTypes": [
                "pin",
                "digest"
            ],
            "automerge": true
        },
        {
            "groupName": "golang",
            "groupSlug": "golang",
            "matchPackageNames": [
                "/^golang.*/"
            ]
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/^.github/workflows/.*/"
            ],
            "matchStrings": [
                "go-version: (?<currentValue>.*?)\n"
            ],
            "depNameTemplate": "golang",
            "datasourceTemplate": "docker"
        }
    ]
}
